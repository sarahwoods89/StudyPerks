<%- include('partials/header', { currentPage: 'verify' }) %>

<h2>Verify Your Student ID</h2>
<form action="/verify" method="POST" enctype="multipart/form-data">
  <label for="studentCard">Upload your student card:</label><br>
  <input type="file" name="studentCard" required /><br><br>

  <label for="walletAddress">Enter your wallet address:</label><br>
  <input type="text" name="walletAddress" required /><br><br>

  <button type="submit">Submit</button>
</form>


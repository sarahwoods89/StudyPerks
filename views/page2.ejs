<%- include partials/header.ejs %>

<body>
  <div class="main-container">
    <!-- all your email form and MetaMask content -->
  </div>

  <div class="main-container">
    <h3>Verify Student Email</h3>
    <form id="emailForm">
      <input type="email" id="studentEmail" name="studentEmail" placeholder="Enter your @student.ncirl.ie email" required />
      <button type="submit">Verify Email</button>
    </form>
    <p id="emailStatus"></p>

    <div>
      <button onclick="connectMetamask()">CONNECT TO METAMASK</button>
      <p id="userArea">Status: Not connected to Metamask</p>
    </div>
  </div>
</body>


<script>
  // Email verification logic
  document.getElementById("emailForm").addEventListener("submit", async function (e) {
    e.preventDefault();
    const email = document.getElementById("studentEmail").value;

    try {
      const response = await fetch("/verify-email", {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: `studentEmail=${encodeURIComponent(email)}`
      });

      const resultText = await response.text();
      document.getElementById("emailStatus").innerText = resultText;
    } catch (error) {
      document.getElementById("emailStatus").innerText = "An error occurred while verifying email.";
    }
  });

  // MetaMask connect logic
  let account;
  const connectMetamask = async () => {
    if (window.ethereum) {
      const accounts = await window.ethereum.request({ method: "eth_requestAccounts" });
      account = accounts[0];
      document.getElementById("userArea").innerHTML = `User Account: ${account}`;
    } else {
      alert("Please install MetaMask to use this feature.");
    }
  };
</script>

